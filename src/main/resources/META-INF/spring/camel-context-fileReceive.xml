<?xml version="1.0" encoding="UTF-8"?>
<!-- Configures the Camel Context -->

<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="
       http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
       http://camel.apache.org/schema/spring http://camel.apache.org/schema/spring/camel-spring.xsd">

	<camelContext xmlns="http://camel.apache.org/schema/spring" >
		<route>
			<!--
				옵션설명
				설명: move=done   fileBox폴더 아래 done폴더를 자동으로 만들어서 다읽은 파일을 이동시킨다.


			-->
			<from uri="file://fileBox?delay=5000&amp;move=done&amp;idempotent=true"/>
			<!--<log message="[SERVER]message:[${body}]" loggingLevel="DEBUG"></log>-->
			<!--<to   uri="direct:start" />-->
			<to   uri="file:target/reports" />
		</route>


	</camelContext>

</beans>